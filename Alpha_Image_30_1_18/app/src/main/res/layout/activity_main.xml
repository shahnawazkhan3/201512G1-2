<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zaaviyah.alpha_image_30_1_18.MainActivity">


    <Button
        android:id="@+id/btGreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="green"
        android:text="green"
        android:layout_below="@+id/imgAndroid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <Button
        android:id="@+id/btRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="Red"
        android:text="Red"
        android:layout_below="@+id/btGreen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="blue"
        android:text="blue"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btYellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="yellow"
        android:text="Yellow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btBlue" />

    <ImageView
        android:id="@+id/imgAndroid"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/btGray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btYellow"
        android:layout_centerHorizontal="true"
        android:onClick="grey"
        android:text="grey" />

    <Button
        android:id="@+id/btBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="black"
        android:text="black"
        android:layout_below="@+id/btGray"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
